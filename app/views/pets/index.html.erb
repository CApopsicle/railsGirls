<p id="notice"><%= notice %></p>

<h1>Listing Pets</h1>

<div class="row">
  <% @pets.each do |pet| %>
  <div class="col-sm-6 col-md-3">
    <div class="thumbnail">
      <%= image_tag(pet.picture_url, width:200) %>
      <div class="caption">
        <h4><%= pet.name %></h4>
        <p><%= pet.age %>歲 <%= pet.breed %></p>
        <p>可領養日期:<%= pet.open_date %></p>
        <p><%= truncate(pet.description, length: 25, separator: ' ', omission: '... (continued)')%></p>
        <% if user_signed_in? %>
          <p>
            <%= link_to 'Edit', edit_pet_path(pet), class:"btn btn-primary" %>
            <%= link_to 'Delete', pet, method: :delete, data: { confirm: 'Are you sure?' } ,class:"btn btn-default"%>
          </p>
        <% end %>
        <iframe width="234" height="200" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src=http://maps.google.com.tw/maps?f=q&hl=zh-TW&geocode=&q=<%= pet.lacation.gsub(/[\s]/, "")%>&z=16&output=embed&t=></iframe>

      </div>
    </div>
  </div>
  <% end %>
</div>

